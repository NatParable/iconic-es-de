<!--
    Theme capabilities for iconic-es-de
-->

<themeCapabilities>
   
   <themeName>Iconic</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>4:3</aspectRatio>

   <fontSize>medium</fontSize>
   <fontSize>large</fontSize>
   <fontSize>x-large</fontSize>
   
   <colorScheme name="light-original">
      <label>Light</label>
   </colorScheme>
   <colorScheme name="dark-original">
      <label>Dark</label>
   </colorScheme>
   <colorScheme name="retro-original">
      <label>Retro Gray</label>
   </colorScheme>
   <colorScheme name="light-custom">
      <label>Light (Custom Images)</label>
   </colorScheme>
   <colorScheme name="dark-custom">
      <label>Dark (Custom Images)</label>
   </colorScheme>
   <colorScheme name="retro-custom">
      <label>Retro Gray (Custom Images)</label>
   </colorScheme>


   
   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>


   <variant name="textlist">
      <label>Textlist</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>physicalmedia</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   
   <variant name="small-boxart">
      <label>Grid: Boxart Small</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="medium-boxart">
      <label>Grid: Boxart Medium</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="large-boxart">
      <label>Grid: Boxart Large</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>

   <variant name="small-titlescreen">
      <label>Grid: Titlescreen Small</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="medium-titlescreen">
      <label>Grid: Titlescreen Medium</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="large-titlescreen">
      <label>Grid: Titlescreen Large</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>


   <variant name="small-physical-media">
      <label>Grid: Physical Media Small</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="medium-physical-media">
      <label>Grid: Physical Media Medium</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="large-physical-media">
      <label>Grid: Physical Media Large</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>


   <variant name="small-marquee">
      <label>Grid: Marquee Small</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>basic</useVariant>
      </override>
   </variant>
   <variant name="medium-marquee">
      <label>Grid: Marquee Medium</label>
      <selectable>true</selectable>
